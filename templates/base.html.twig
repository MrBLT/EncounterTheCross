<!doctype html>
<html lang="en">

<head>
    <title>{% block title %}Encounter The Cross{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/vendorcss.css') }}">
        <link rel="stylesheet" href="{{ asset('build/appcss.css') }}">
    {% endblock %}
</head>

<body>
{% if is_granted('ROLE_PREVIOUS_ADMIN') %}
    <div class="alert alert-warning" style="margin-bottom: 0;">
        You are currently switched to this user.
        <a href="{{ path('app_homepage', {'_switch_user': '_exit'}) }}">Exit Impersonation</a>
    </div>
{% endif %}

{% block header %}
<nav class="navbar navbar-dark bg-dark">
    <ul class="navbar-nav ml-auto">
        {% if is_granted('ROLE_USER') %}
            <li class="nav-item dropdown" style="margin-right: 75px;">
                <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.firstName }} {{ app.user.lastName }}
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#todo">Profile</a>
                    {% if is_granted('ROLE_ADMIN_ARTICLE') %}
                        <a class="dropdown-item" href="#todo">Create Post</a>
                    {% endif %}
                    <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                </div>
            </li>
        {% else %}
            <li class="nav-item">
                <a style="color: #fff;" class="nav-link" href="{{ path('app_login') }}">Login</a>
            </li>
            <li class="nav-item">
                <a style="color: #fff;" class="nav-link" href="{{ path('app_register') }}">Register</a>
            </li>
        {% endif %}
    </ul>
    </div>
</nav>
{% endblock %}

{% block body %}
{% endblock %}

<footer class="footer">
    {% block footer %}
    <div class="container text-center">
        <span class="text-muted">Encounter The Cross website coming soon!</span>
    </div>
    {% endblock %}
</footer>


{% block javascripts %}
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
