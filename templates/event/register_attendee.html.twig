{% extends 'base.html.twig' %}

{% block title %}Encounter Registration{% endblock %}

{% block body %}
    <h1>Attendee Registration âœ…</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md">{{ form_row(form.firstName) }}</div>
        <div class="col-md">{{ form_row(form.lastName) }}</div>
    </div>
    <div class="row">
        <div class="col-md">{{ form_row(form.email) }}</div>
        <div class="col-md">{{ form_row(form.phone) }}</div>
    </div>
    {{ form_row(form.address) }}
    {{ form_row(form.address2) }}
    <div class="row">
        <div class="col-md-5">{{ form_row(form.city) }}</div>
        <div class="col-md-3">{{ form_row(form.state) }}</div>
        <div class="col-md-4">{{ form_row(form.zipcode) }}</div>
    </div>
    <div class="row">
        <div class="col-md-5">{{ form_row(form.contactPerson) }}</div>
        <div class="col-md-3">{{ form_row(form.contactPersonRelationship) }}</div>
        <div class="col-md-4">{{ form_row(form.contactPersonPhone) }}</div>
    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.church) }}</div>
        <div class="col-md-6">{{ form_row(form.invitedBy) }}</div>
    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.questionsOrComments) }}</div>
        <div class="col-md-6">{{ form_row(form.concerns) }}</div>
    </div>
    {{ form_row(form.launchPoint) }}
    <div class="row">
        <div class="col">
            <button class="btn btn-primary" type="submit">Register!</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
